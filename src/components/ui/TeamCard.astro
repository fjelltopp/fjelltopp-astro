---
import { Image } from "astro:assets";
import linkd from "../../assets/linkedin-dark.svg";
import Card from "./Card.astro";

const { pic, name, role, description, link } = Astro.props;
---

<Card isUnderline={true}>
  <div class="p-[60px]">
    <div class="relative flex flex-col sm:flex-row">
      <picture
        ><Image
          src={pic}
          alt={name}
          class="border-green h-40 w-40 rounded-full border-2 object-cover object-top"
        /></picture
      >
      <div class="flex flex-col justify-end sm:ml-5">
        <h3 class="text-lg font-medium">{name}</h3>
        <p class="text-sm font-normal">{role}</p>
      </div>
      { link && <a href={link} class="absolute right-0 top-0"
        ><Image src={linkd} alt="Linkedin Logo" /></a
      >
      }
    </div>
    <div class="my-7 h-[1px] w-full bg-black"></div>
    <div>{description}</div>
  </div>
</Card>
